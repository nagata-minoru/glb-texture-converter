{
  "type": "module",
  "scripts": {
    "dev": "tsc -w",
    "build": "tsc && terser dist/main.js -o dist/main.min.js",
    "start:loader": "node --import ./loader-config.js",
    "start:debug": "node inspect --import ./loader-config.js",
    "start": "npm run start:loader dist/main.js",
    "debug": "npm run start:debug dist/main.js"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "terser": "^5.31.3",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "sharp": "^0.33.4"
  }
}
